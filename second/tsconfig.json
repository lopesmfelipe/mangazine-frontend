{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx", // Or "react" depending on your JSX preference
    "strict": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,
    "allowJs": true, 
    "resolveJsonModule": true,
    "isolatedModules": true, 
    "noEmit": true // For development, no need to compile TypeScript to JavaScript
  },
  "include": [
    "src/**/*"
  ]
}